# Google API Key (Places API, Maps API, Gemini API)
GOOGLE_API_KEY=your_google_api_key_here

# MySQL connection string (SQLAlchemy async format)
DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/foodfinder

# MySQL settings for docker-compose (任意で上書き)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=foodfinder
MYSQL_USER=foodfinder
MYSQL_PASSWORD=foodfinder

# CORS設定 - カンマ区切りで許可するオリジンを指定
# 開発環境
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8001

# 招待リンク生成用フロントエンドURL（本番デプロイ時に更新）
FRONTEND_BASE_URL=http://localhost:5173

# 本番環境の例（デプロイ後に更新）
# ALLOWED_ORIGINS=https://your-app-xxxxx-an.a.run.app,https://your-domain.com

# Cloud SQL credentials are stored in GCP Secret Manager
CLOUD_SQL_SECRET_NAME=cloud-sql-credentials
# Uncomment the following only when Secret Manager is not available (e.g. local development)
# CLOUD_SQL_INSTANCE=
# CLOUD_SQL_DB=
# CLOUD_SQL_USER=
# CLOUD_SQL_PASSWORD=
