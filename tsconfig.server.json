{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["server/**/*.ts", "db/**/*.ts"],
  "exclude": ["src", "dist", "node_modules"]
}
