{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client", "vitest"],
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src", "server", "db", "vite.config.ts", "vitest.config.ts"]
}
